<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActivity">

    <EditText
        android:id="@+id/etNome"
        android:layout_width="326dp"
        android:layout_height="55dp"
        android:layout_marginTop="116dp"
        android:ems="10"
        android:hint="@string/txtNomeProduto"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etQto"
        android:layout_width="324dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/txtQuantidade"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNome" />

    <EditText
        android:id="@+id/etValor"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="274dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="157dp"
        android:layout_height="77dp"
        android:text="@string/txtSalvar"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtConservacao"
        android:textColor="#101010"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="343dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="370dp">

        <RadioButton
            android:id="@+id/rbSemRefrigercao"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="@string/txtSem_refrigeracao" />

        <RadioButton
            android:id="@+id/rbCongelado"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:text="@string/txtCongelado" />

        <RadioButton
            android:id="@+id/rbResfriado"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="@string/txtResfriado" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>